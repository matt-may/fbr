<h1>Welcome to QuizRun</h1>
<hr>

<% unless question_quota_met? %>
<p>Just getting started? Add at least 5 questions to unlock the ability to make a quiz.</p>
<% else %>
<p>Quiz ability unlocked. Create a new Quiz Run below.</p>
<% end %>

<% unless @questions.empty? %>
    <h2 style="color:blue;">Questions</h2>

    <table>
      <thead>
      <tr>
        <th>Prompt</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @questions.each do |question| %>
          <tr>
            <td><%= question.prompt %></td>
            <td><%= link_to 'Show', question %></td>
            <td><%= link_to 'Edit', edit_question_path(question) %></td>
            <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
<% end %>

<%= link_to 'Create New Question', new_question_path %>

<% if question_quota_met? %>
    <div style="height:50px;"></div>
    <h2 style="color:green;">Quiz Runs</h2>

    <% unless @quiz_runs.empty? %>
        <table>
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @quiz_runs.each do |quiz_run| %>
              <tr>
                <td><%= quiz_run.name %></td>
                <td><%= quiz_run.description %></td>
                <td><%= link_to 'Show', quiz_run %></td>
                <td><%= link_to 'Edit', edit_quiz_run_path(quiz_run) %></td>
                <td><%= link_to 'Destroy', quiz_run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <br>
    <% end %>

    <%= link_to 'Create New Quiz Run', new_quiz_run_path %>
<% end %>
